<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/prog_exo_row_min_height">

        <TextView
            android:id="@+id/text_prog_exo_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/text_prog_exo_repetition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/prog_exo_row_min_height">

        <TextView
            android:id="@+id/text_prog_exo_serie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/text_prog_exo_time"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/prog_exo_row_min_height">

        <TextView
            android:id="@+id/text_prog_exo_weight"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size"/>

    </TableRow>

</TableLayout>