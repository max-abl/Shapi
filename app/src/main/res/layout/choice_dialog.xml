<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_choice_text_size"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dialog_choice_margin"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dialog_choice_margin"
        android:minHeight="@dimen/dialog_choice_min_height"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/text_choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_choice_text_size"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dialog_choice_margin"
        android:layout_marginLeft="@dimen/dialog_choice_margin"
        android:minHeight="@dimen/dialog_choice_min_height"/>

</LinearLayout>